<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="Model2Text">
    <property name="ECLIPSE_HOME" value="../../../../eclipse/modeling-2022-12/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../eclipse-workspace"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="Model2Text.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/Model2Text/bin"/>
    </path>

    <path id="Model2Text.classpath">
        <path refid="Model2Text.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="Model2Text.libraryclasspath.alljars">
        <pathelement location="../Model2Text/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="Model2Text.classpath.alljars">
        <path refid="Model2Text.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="Model2Text.main.Generate" classpathref="Model2Text.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="Model2Text.main.Generate" classpathref="Model2Text.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
