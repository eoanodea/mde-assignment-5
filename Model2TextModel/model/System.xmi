<?xml version="1.0" encoding="UTF-8"?>
<sys:System
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:sys="platform:/resource/Model2TextModel/model/System.ecore/"
    xsi:schemaLocation="platform:/resource/Model2TextModel/model/System.ecore/ System.ecore"
    name="sys"
    description="Here is a great system"
    version="2"
    subversion="5">
  <entities
      name="User"
      description="A user who has signed up">
    <features
        xsi:type="sys:Attribute"
        name="id"
        description="Unique identifier for the user"
        IsPrimaryKey="true"/>
    <features
        xsi:type="sys:Attribute"
        name="username"
        description="The username of the user"
        type="string"/>
  </entities>
  <pages name="Home"
      description="the homepage"
      url="website.com"
      isHomePage="true">
    <content
        xsi:type="sys:StaticContent"
        type="h1"
        text="Welcome to the homepage"/>
    <content
        xsi:type="sys:Form"
        name="Sign up"
        description="Form used to sign up users"
        entity="//@entities.0">
      <elements
          name="username"
          description="The users username"
          label="Enter your username"
          attr="//@entities.0/@features.1"/>
    </content>
  </pages>
  <pages name="Profile"
      description="The profile page"
      url="website.com/profile">
    <content
        xsi:type="sys:StaticContent"
        type="h1"
        text="This is the profile page"/>
    <content
        xsi:type="sys:DynamicContent"
        entity="//@entities.0"
        attr="//@entities.0/@features.1"/>
  </pages>
</sys:System>
